{{ 'c-transactions.css' |  asset_url |  stylesheet_tag }}

<div class="transaction">
    <div class="transaction-container">
        {% if section.settings.title %}
            <h1 class="title">{{ section.settings.title }}</h1>
        {% endif %}

        <div class="items">
            {% for block in section.blocks %}
                {% if block.type == 'item' %}
                    <div class="item">
                        <div class="item-wrapper">
                            {% if block.settings.title %}
                                <h3>{{ block.settings.title }}</h3>
                            {% endif %}
                            {% if block.settings.text %}
                                <span>{{ block.settings.text }}</span>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "transaction",
        "class": "section",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "title"
            }
        ],
        "blocks": [
            {
                "type": "item",
                "name": "item",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "text",
                        "id": "text",
                        "label": "Text"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "transactions",
                "blocks": [
                    {
                        "type": "item"
                    }
                ]
            }
        ]
    }
{% endschema %}
